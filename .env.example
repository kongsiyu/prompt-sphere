# ================================================================
# AI System Prompt Generator - Environment Variables Template
# ================================================================
# Copy this file to .env.local and fill in your specific values
# This file contains all configurable environment variables

# ================================================================
# APPLICATION CONFIGURATION
# ================================================================
VITE_APP_NAME="AI System Prompt Generator"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Full-stack application for creating and managing AI system prompts"

# ================================================================
# DEVELOPMENT CONFIGURATION
# ================================================================
# Enable development tools and features
VITE_ENABLE_DEV_TOOLS=true
VITE_HOT_RELOAD=true
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# Development server settings
VITE_DEV_PORT=3000
VITE_HOST=0.0.0.0
VITE_HTTPS=false

# ================================================================
# API CONFIGURATION
# ================================================================
# Backend API endpoints
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# API endpoints
VITE_API_PROMPTS_ENDPOINT=/api/v1/prompts
VITE_API_TEMPLATES_ENDPOINT=/api/v1/templates
VITE_API_HEALTH_ENDPOINT=/health

# ================================================================
# AUTHENTICATION & SECURITY
# ================================================================
# JWT settings
VITE_JWT_STORAGE_KEY=ai_prompt_generator_token
VITE_JWT_REFRESH_THRESHOLD=300000

# OAuth providers (if enabled)
VITE_GOOGLE_CLIENT_ID=""
VITE_GITHUB_CLIENT_ID=""

# Security features
VITE_ENABLE_CSP=true
VITE_ENABLE_RATE_LIMITING=true

# ================================================================
# EXTERNAL SERVICE INTEGRATION
# ================================================================
# AI Service Providers
VITE_OPENAI_ENABLED=true
VITE_ANTHROPIC_ENABLED=true
VITE_GOOGLE_AI_ENABLED=false

# Analytics and monitoring
VITE_GOOGLE_ANALYTICS_ID=""
VITE_SENTRY_DSN=""
VITE_POSTHOG_KEY=""

# ================================================================
# UI/UX CONFIGURATION
# ================================================================
# Theme and appearance
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_HIGH_CONTRAST=true

# Feature flags
VITE_ENABLE_EXPORT_FEATURES=true
VITE_ENABLE_COLLABORATION=false
VITE_ENABLE_VERSION_CONTROL=true

# ================================================================
# PERFORMANCE & OPTIMIZATION
# ================================================================
# Caching
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_DURATION=3600000

# Bundle optimization
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_TREE_SHAKING=true

# ================================================================
# DEVELOPMENT FEATURES
# ================================================================
# Mock data and testing
VITE_USE_MOCK_DATA=false
VITE_MOCK_DELAY=500
VITE_ENABLE_API_MOCKING=false

# Development tools
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true
VITE_ENABLE_SOURCE_MAPS=true

# ================================================================
# ENVIRONMENT SPECIFIC OVERRIDES
# ================================================================
# Set NODE_ENV automatically based on build
NODE_ENV=development

# Build specific settings
VITE_BUILD_TARGET=es2020
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=false