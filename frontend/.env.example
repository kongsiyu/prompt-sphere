# ================================================================
# Frontend Environment Variables Template
# ================================================================
# Copy this file to .env.local in the frontend directory
# These variables are specific to the React frontend

# ================================================================
# VITE CONFIGURATION
# ================================================================
# Server configuration
VITE_PORT=3000
VITE_HOST=0.0.0.0
VITE_HTTPS=false

# Development features
VITE_OPEN=true
VITE_STRICTMODE=true

# ================================================================
# APPLICATION SETTINGS
# ================================================================
VITE_APP_TITLE="AI System Prompt Generator"
VITE_APP_DESCRIPTION="Create and manage AI system prompts"
VITE_APP_VERSION="1.0.0"

# ================================================================
# API CONFIGURATION
# ================================================================
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# ================================================================
# DEVELOPMENT TOOLS
# ================================================================
VITE_ENABLE_DEVTOOLS=true
VITE_REACT_REFRESH=true
VITE_ESLINT=true

# ================================================================
# BUILD CONFIGURATION
# ================================================================
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_TARGET=es2020
VITE_BUILD_MINIFY=false
VITE_BUILD_REPORT=false

# ================================================================
# FEATURE FLAGS
# ================================================================
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_EXPORT=true
VITE_FEATURE_COLLABORATION=false

# ================================================================
# EXTERNAL SERVICES
# ================================================================
VITE_SENTRY_DSN=""
VITE_GOOGLE_ANALYTICS=""