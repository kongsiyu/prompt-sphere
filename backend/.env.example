# ================================================================
# Backend Environment Variables Template
# ================================================================
# Copy this file to .env in the backend directory
# Fill in your specific values for local development

# ================================================================
# APPLICATION SETTINGS
# ================================================================
APP_NAME="AI Prompt Generator API"
APP_VERSION="0.1.0"
APP_DESCRIPTION="FastAPI backend for AI System Prompt Generator"
DEBUG=true
ENVIRONMENT=development

# ================================================================
# SERVER CONFIGURATION
# ================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=debug
WORKERS=1

# ================================================================
# API CONFIGURATION
# ================================================================
API_V1_PREFIX="/api/v1"
API_DOCS_URL="/docs"
API_REDOC_URL="/redoc"
API_OPENAPI_URL="/openapi.json"

# Request settings
MAX_REQUEST_SIZE=10485760  # 10MB
REQUEST_TIMEOUT=30

# ================================================================
# CORS SETTINGS
# ================================================================
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8080,http://localhost:5173"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOW_HEADERS="*"

# ================================================================
# SECURITY SETTINGS
# ================================================================
SECRET_KEY="your-secret-key-here-change-in-production-use-openssl-rand-base64-32"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing
PWD_CONTEXT_SCHEMES="bcrypt"
PWD_CONTEXT_DEPRECATED="auto"

# ================================================================
# DATABASE CONFIGURATION
# ================================================================
# SQLite (default for development)
DATABASE_URL="sqlite:///./app.db"

# PostgreSQL (production)
# DATABASE_URL="postgresql://user:password@localhost:5432/ai_prompt_generator"
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20

# Database migrations
ALEMBIC_CONFIG="alembic.ini"

# ================================================================
# REDIS CONFIGURATION (Optional)
# ================================================================
REDIS_URL=""
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_POOL_SIZE=10

# ================================================================
# EXTERNAL API INTEGRATION
# ================================================================
# OpenAI Configuration
OPENAI_API_KEY=""
OPENAI_ORGANIZATION=""
OPENAI_BASE_URL="https://api.openai.com/v1"
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=""
ANTHROPIC_BASE_URL="https://api.anthropic.com"
ANTHROPIC_MAX_TOKENS=2000
ANTHROPIC_TEMPERATURE=0.7

# Google AI Configuration
GOOGLE_AI_API_KEY=""
GOOGLE_AI_MODEL="gemini-pro"

# DashScope (阿里百炼) Configuration
DASHSCOPE_API_KEY=""
DASHSCOPE_BASE_URL="https://dashscope.aliyuncs.com/compatible-mode/v1"
DASHSCOPE_MODEL="qwen-turbo"
DASHSCOPE_MAX_TOKENS=2000
DASHSCOPE_TEMPERATURE=0.7
DASHSCOPE_TOP_P=0.8
DASHSCOPE_TIMEOUT=30
DASHSCOPE_MAX_RETRIES=3

# ================================================================
# MONITORING & LOGGING
# ================================================================
# Sentry (Error tracking)
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# Logging configuration
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE="app.log"
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ================================================================
# RATE LIMITING
# ================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT="100/minute"
RATE_LIMIT_BURST=10

# ================================================================
# CACHING
# ================================================================
CACHE_ENABLED=true
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000

# ================================================================
# FILE UPLOAD & STORAGE
# ================================================================
UPLOAD_DIR="uploads"
MAX_UPLOAD_SIZE=5242880  # 5MB
ALLOWED_EXTENSIONS="txt,json,csv,md"

# ================================================================
# TESTING CONFIGURATION
# ================================================================
TEST_DATABASE_URL="sqlite:///./test.db"
TESTING=false

# ================================================================
# DEVELOPMENT FEATURES
# ================================================================
ENABLE_DOCS=true
ENABLE_ADMIN=true
ENABLE_PROFILING=false
ENABLE_MOCK_RESPONSES=false

# ================================================================
# HEALTH CHECK CONFIGURATION
# ================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_EXTERNAL_APIS=false

# ================================================================
# BACKGROUND TASKS
# ================================================================
CELERY_BROKER_URL=""
CELERY_RESULT_BACKEND=""
TASK_QUEUE_ENABLED=false

# ================================================================
# DINGTALK OAUTH CONFIGURATION
# ================================================================
# DingTalk OAuth 2.0 Settings
DINGTALK_CLIENT_ID=""
DINGTALK_CLIENT_SECRET=""
DINGTALK_REDIRECT_URI="http://localhost:8000/auth/dingtalk/callback"
DINGTALK_CORP_ID=""

# OAuth flow settings
DINGTALK_SCOPE="openid"
DINGTALK_PROMPT="consent"
DINGTALK_TIMEOUT=30

# Session and state management
OAUTH_STATE_EXPIRY=600  # 10 minutes
OAUTH_SESSION_COOKIE_NAME="oauth_session"
OAUTH_SESSION_SECURE=false  # Set to true in production with HTTPS